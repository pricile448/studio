
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an administrator
    function isAdmin() {
      // An admin user has a document with their UID in the 'admins' collection.
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins Collection
    // This allows the app to check if a user is an admin.
    // Only existing admins can add or remove other admins.
    match /admins/{adminId} {
      allow get: if request.auth != null;
      allow list, write: if isAdmin();
    }

    // Users Collection
    match /users/{userId} {
      // READ: A user can read their own profile, or an admin can read any profile.
      allow read: if request.auth.uid == userId || isAdmin();

      // CREATE: Allow user creation only if the UID matches the document ID during signup.
      allow create: if request.auth.uid == userId;

      // UPDATE: An admin can update any user document. A user can only update their own.
      allow update: if request.auth.uid == userId || isAdmin();
    }
    
    // Chats Collection
    match /chats/{chatId} {
      function isParticipant() {
        return request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }

      // An admin or a participant can read/write the chat document itself.
      allow read, write: if isParticipant() || isAdmin();
      
      // Messages Subcollection
      match /messages/{messageId} {
        // An admin or a participant can read messages.
        allow read: if isParticipant() || isAdmin();
        
        // An admin or the message's sender can create a message.
        allow create: if (request.resource.data.senderId == request.auth.uid) || isAdmin();
        
        // A user can "soft delete" their own message. Admins can update any message.
        allow update: if (resource.data.senderId == request.auth.uid && request.resource.data.keys().hasOnly(['deletedForUser'])) || isAdmin();
        
        // Only admins can permanently delete messages.
        allow delete: if isAdmin();
      }
    }
  }
}
