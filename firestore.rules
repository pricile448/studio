
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Rules for chat
    match /chats/{chatId} {
      // Allow a user to query for chats they are a part of.
      // This rule supports the `where('participants', 'array-contains', userId)` query.
      allow list: if request.query.where.participants == request.auth.uid;

      // Allow a user to read a chat document if they are a participant.
      allow read: if request.auth.uid in resource.data.participants;

      // Allow a user to create a chat if they are one of the participants.
      allow create: if request.auth.uid in request.resource.data.participants;
      
      // Allow participants to read/write messages
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
