rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Authenticated users can read their own data.
      allow read: if request.auth.uid == userId;
      
      // An authenticated user can create their own profile document.
      allow create: if request.auth.uid == userId;
      
      // Users can update their own data, with the following restrictions:
      allow update: if request.auth.uid == userId &&
                       // These fields are immutable and cannot be changed by the user after creation.
                       request.resource.data.uid == resource.data.uid &&
                       request.resource.data.email == resource.data.email &&
                       request.resource.data.createdAt == resource.data.createdAt &&
                       
                       // These fields can only be set by an admin, not by the user.
                       request.resource.data.iban == resource.data.iban &&
                       request.resource.data.bic == resource.data.bic &&
                       
                       // This is the only valid KYC status transition a user can perform.
                       // If the kycStatus is being changed, it MUST be from 'unverified' to 'pending'.
                       // Any other value for kycStatus can remain unchanged during other profile edits.
                       (request.resource.data.kycStatus == resource.data.kycStatus ||
                        (resource.data.kycStatus == 'unverified' && request.resource.data.kycStatus == 'pending'));
    }
  }
}
